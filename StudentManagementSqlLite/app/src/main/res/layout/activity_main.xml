<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/download"

    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editRollno"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Enter Roll Number" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editRollno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Enter Name" />

    <EditText
        android:id="@+id/editMarks"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Enter Marks" />

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editMarks"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/relativeLayout2">


    </RelativeLayout>

    <Button
        android:id="@+id/btnView"
android:text="View"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/btnDelete"
        android:layout_toRightOf="@+id/btnDelete"
        android:layout_toEndOf="@+id/btnDelete" />

    <Button
        android:id="@+id/btnModify"

        android:layout_width="100dp"
android:text="Update"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdd"
        android:layout_toRightOf="@+id/btnAdd"
        android:layout_toEndOf="@+id/btnAdd" />

    <Button
        android:id="@+id/btnViewall"

        android:layout_width="100dp"

android:text="View All"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnModify"
        android:layout_toRightOf="@+id/btnAdd"
        android:layout_toEndOf="@+id/btnAdd" />

    <Button
        android:id="@+id/btnAdd"
        android:text="Add"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnDelete"
        android:layout_toStartOf="@+id/btnDelete" />

    <Button
        android:id="@+id/btnDelete"
android:text="Delete"
      android:layout_width="100dp"

        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/btnAdd"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
