<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.adnan.service.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Services Demo!"
        android:textColor="#000" />

    <Button
        android:id="@+id/startNotStick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startSticky"
        android:layout_centerHorizontal="true"
        android:text="Start Not Sticky" />

    <Button
        android:id="@+id/redeliverIntent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startNotStick"
        android:layout_centerHorizontal="true"
        android:text="Redeliver Intent" />

    <Button
        android:id="@+id/intentService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/redeliverIntent"
        android:layout_alignRight="@+id/redeliverIntent"
        android:layout_below="@+id/redeliverIntent"
        android:layout_centerHorizontal="true"
        android:text="Start Sticky In Seprate Process" />

    <Button
        android:id="@+id/startSticky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Start Sticky" />

    <Button
        android:id="@+id/SimpleService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intentService"
        android:layout_centerHorizontal="true"
        android:text="Start Not Sticky In Seprate Process" />



</RelativeLayout>
