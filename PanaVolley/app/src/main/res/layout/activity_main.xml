<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:id="@+id/jsonArray"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Json Array Request"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/jsonObject"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/jsonArray"
        android:layout_centerHorizontal="true"
        android:text="Json Object Request" />

    <Button
        android:id="@+id/StringReq"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/jsonObject"
        android:text="String Request"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/imageLoader"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ImageLoader"
        android:layout_below="@id/StringReq"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_below="@id/imageLoader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#d9d9d9" />


</RelativeLayout>
