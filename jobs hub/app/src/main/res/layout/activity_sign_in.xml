<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97A4AE"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.adnan.myapplication.signIn">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"
android:layout_gravity="center"
        android:text="Welcome To Sign In"
        android:textColor="#000"
        android:textSize="27dp" />



    <EditText
        android:id="@+id/signInid"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/linee"
        android:hint="User Name "
        />

    <EditText
        android:id="@+id/signInPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView33"
        android:layout_below="@+id/signInid"
        android:layout_marginTop="58dp"
        android:hint="Password"
        android:layout_toRightOf="@+id/textView33"
        android:ems="10"
        android:background="@drawable/linee"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#607D8B"
        android:layout_marginTop="80dp"
        android:text="Sign In" />


</LinearLayout>
